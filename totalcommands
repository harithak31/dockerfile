pipeline {
    agent {
        label "test"
    }

    stages {
        stage('gitcheckout')
        {
            steps{
                script{
                    git branch: 'main', credentialsId: 'githubid', url: 'https://github.com/harithak31/dockerfile.git'
                    sh "git checkout test"
                }
            }
        }
        stage('totalcommands') {
            steps {
                sh "who"
                sh "whoami"
                sh "pwd"
                sh "date"
                sh "ls -lrt"
                sh "cd var"
                sh "cd ../"
                sh "free"
                sh "cal"
                sh "env"
                sh "uname -a"
               sh "cat /etc/os-release"
               sh "top"
               sh "ls -lrt|grep var"
               sh "ls -ltr|wc - l"
               sh "mkdir call"
               sh "mkdir  linux"
               sh "rm -rf call"
               sh "touch commands"
                sh "touch linux"
                sh "cp commands linux"
               sh "mv commands unix"
               sh "echo 'i am practice ls commands,git,jenkins,docker,maven,cicd pipeline' >>commands"
               sh "chmod 666 linux"              
            }
        }
    }

